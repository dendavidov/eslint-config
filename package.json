{
  "name": "@dendavidov/eslint-config",
  "version": "2.3.28",
  "description": "ESLint flat config for TypeScript/Node.js projects, supporting Node.js 22.x LTS.",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "license": "MIT",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll=false",
    "format": "prettier --write .",
    "format:check": "prettier --check ./src",
    "release": "npx semantic-release",
    "prepare": "npx husky install"
  },
  "author": "Denis Davydov mail@dendavidov.com",
  "repository": {
    "type": "git",
    "url": "git@github.com:dendavidov/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/dendavidov/eslint-config/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "src/index.js",
    "src/index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-security": "^3.0.1"
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@semantic-release/git": "^10.0.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "prettier": "^3.6.2"
  }
}
